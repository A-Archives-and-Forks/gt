{
  "name": "gt-react",
  "version": "8.2.4",
  "description": "A React library for automatic internationalization.",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "dist/index.d.ts",
  "peerDependencies": {
    "react": ">=16.8.0 <20.0.0",
    "react-dom": ">=16.8.0 <20.0.0"
  },
  "scripts": {
    "patch": "npm version patch",
    "transpile": "tsc",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/general-translation/gt-react.git"
  },
  "author": "General Translation, Inc.",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/general-translation/gt-react/issues"
  },
  "homepage": "https://github.com/general-translation/gt-react#readme",
  "devDependencies": {
    "@types/node": ">=20.0.0 <23.0.0",
    "@types/react": ">=18.0.0 <20.0.0",
    "@types/react-dom": ">=18.0.0 <20.0.0",
    "typescript": "^5.7.3"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/index.d.ts"
    },
    "./internal": {
      "import": "./dist/esm/internal.js",
      "require": "./dist/cjs/internal.js",
      "types": "./dist/internal.d.ts"
    },
    "./client": {
      "import": "./dist/esm/client.js",
      "require": "./dist/cjs/client.js",
      "types": "./dist/client.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "client": [
        "./dist/client.d.ts"
      ],
      "internal": [
        "./dist/internal.d.ts"
      ]
    }
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "gt-react/client": [
        "/dist/client"
      ],
      "gt-react/internal": [
        "/dist/internal"
      ]
    }
  },
  "keywords": [
    "react",
    "translation",
    "internationalization",
    "localization",
    "i18n"
  ],
  "dependencies": {
    "@generaltranslation/supported-locales": "^1.1.2",
    "generaltranslation": "^6.1.2"
  }
}
