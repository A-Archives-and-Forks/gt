{
  "name": "gt-next",
  "version": "4.2.3",
  "description": "A Next.js library for automatic internationalization.",
  "main": "./dist/cjs/index.server.js",
  "module": "./dist/esm/index.server.js",
  "types": "./dist/types/index.server.d.ts",
  "peerDependencies": {
    "next": ">=13.0.0 <16.0.0",
    "react": ">=16.8.0 <20.0.0",
    "react-dom": ">=16.8.0 <20.0.0"
  },
  "scripts": {
    "patch": "npm version patch",
    "transpile": "npm run build",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/general-translation/gt-next.git"
  },
  "author": "General Translation, Inc.",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/general-translation/gt-next/issues"
  },
  "homepage": "https://github.com/general-translation/gt-next#readme",
  "devDependencies": {
    "@types/node": ">=20.0.0 <23.0.0",
    "@types/react": ">=18.0.0 <20.0.0",
    "@types/react-dom": ">=18.0.0 <20.0.0",
    "typescript": "^5.7.3"
  },
  "exports": {
    ".": {
      "node": {
        "import": "./dist/esm/index.server.js",
        "require": "./dist/cjs/index.server.js"
      },
      "browser": {
        "import": "./dist/esm/index.client.js",
        "require": "./dist/cjs/index.client.js"
      },
      "types": "./dist/types/index.server.d.ts"
    },
    "./config": {
      "import": "./dist/esm/config.js",
      "require": "./dist/cjs/config.js",
      "types": "./dist/types/config.d.ts"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "default": "./dist/client.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "default": "./dist/server.js"
    },
    "./middleware": {
      "types": "./dist/middleware.d.ts",
      "default": "./dist/middleware.js"
    },
    "./_request": {
      "default": "./dist/_request.js"
    },
    "./_dictionary": {
      "default": "./dist/_dictionary.js"
    }
  },
  "typesVersions": {
    "*": {
      "config": [
        "./dist/config.d.ts"
      ],
      "client": [
        "./dist/client.d.ts"
      ],
      "server": [
        "./dist/server.d.ts"
      ],
      "middleware": [
        "./dist/middleware.d.ts"
      ],
      "_request": [
        "./dist/_request.d.ts"
      ],
      "_dictionary": [
        "./dist/_request.d.ts"
      ]
    }
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "gt-next/config": [
        "/dist/config",
        "/dist/config"
      ],
      "gt-next/client": [
        "/dist/client",
        "/dist/client"
      ],
      "gt-next/server": [
        "/dist/server",
        "/dist/server"
      ],
      "gt-next/middleware": [
        "/dist/middleware",
        "/dist/middleware"
      ],
      "gt-next/_request": [
        "/dist/_request",
        "/dist/_request"
      ],
      "gt-next/_dictionary": [
        "/dist/_dictionary",
        "/dist/_dictionary"
      ]
    }
  },
  "keywords": [
    "react",
    "translation",
    "internationalization",
    "localization",
    "i18n"
  ],
  "dependencies": {
    "@generaltranslation/supported-locales": "^1.1.2",
    "generaltranslation": "^6.1.2",
    "gt-react": "^8.2.3"
  }
}
