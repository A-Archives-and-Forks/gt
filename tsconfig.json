{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "declaration": true,
    "removeComments": false,
    "stripInternal": true, 
    "baseUrl": "./",
    "paths": {
      "generaltranslation": ["src/index.ts"]
    }
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules", "dist"]
}
