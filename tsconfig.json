{
  "compilerOptions": {
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "./dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": false,
    "stripInternal": true, 
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "generaltranslation": ["src/index.ts"]
    },
    "lib": ["ES2023"]
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules", "dist"]
}
