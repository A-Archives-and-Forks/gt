{
    "compilerOptions": {
      "target": "ES6",                          
      "module": "NodeNext",                     
      "declaration": true,                      
      "outDir": "./dist",                       
      "strict": true,                           
      "esModuleInterop": true,                  
      "skipLibCheck": true,                     
      "forceConsistentCasingInFileNames": true,
      "jsx": "react"
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  